#include <stdio.h>

int main() {

    char Estado;
    char Codigo_da_Carta[4];
    char Nome_da_Cidade[40];
    int Populacao;
    float Area;
    float PIB;
    int Pontos_Turisticos;

    printf("Olá! Sejam bem-vindos ao Super Trunfo.\n");
    printf("Vamos iniciar informando os atributos da sua carta:\n\n");

    printf("Digite o Estado (A-H): \n");
    scanf(" %c", &Estado);

    printf("Digite o Código da Carta: \n");
    scanf("%s", Codigo_da_Carta);

    printf("Digite o Nome da Cidade: \n");
    scanf("%s", Nome_da_Cidade);

    printf("Digite a População da sua cidade: \n");
    scanf("%d", &Populacao);

    printf("Digite a Área da sua cidade em Km²: \n");
    scanf("%f", &Area);

    printf("Digite o PIB da sua cidade: \n");
    scanf("%f", &PIB);

    printf("Digite quantos Pontos Turisticos tem sua cidade: \n");
    scanf("%d", &Pontos_Turisticos);

    printf("\n-- Carta 1 --\n");
    printf("Estado: %c\n", Estado);
    printf("Código da Carta: %s\n", Codigo_da_Carta);
    printf("Nome da Cidade: %s\n", Nome_da_Cidade);
    printf("População: %d\n", Populacao);
    printf("Área: %.3f Km²\n", Area);
    printf("PIB: %.3f\n", PIB);
    printf("Pontos Turísticos: %d\n", Pontos_Turisticos);

    // Segunda carta
    char Estado2;
    char Codigo_da_Carta2[4];
    char Nome_da_Cidade2[40];
    int Populacao2;
    float Area2;
    float PIB2;
    int Pontos_Turisticos2;

    printf("\nVamos informar os atributos da sua segunda carta agora!\n\n");

    printf("Digite o Estado (A-H): \n");
    scanf(" %c", &Estado2);

    printf("Digite o Código da Carta: \n");
    scanf("%s", Codigo_da_Carta2);

    printf("Digite o Nome da Cidade: \n");
    scanf("%s", Nome_da_Cidade2);

    printf("Digite a População da sua cidade: \n");
    scanf("%d", &Populacao2);

    printf("Digite a Área da sua cidade em Km²: \n");
    scanf("%f", &Area2);

    printf("Digite o PIB da sua cidade: \n");
    scanf("%f", &PIB2);

    printf("Digite quantos Pontos Turisticos tem sua cidade: \n");
    scanf("%d", &Pontos_Turisticos2);

    printf("\n-- Carta 2 --\n");
    printf("Estado: %c\n", Estado2);
    printf("Código da Carta: %s\n", Codigo_da_Carta2);
    printf("Nome da Cidade: %s\n", Nome_da_Cidade2);
    printf("População: %d\n", Populacao2);
    printf("Área: %.3f Km²\n", Area2);
    printf("PIB: %.3f\n", PIB2);
    printf("Pontos Turísticos: %d\n", Pontos_Turisticos2);

    return 0;
}
